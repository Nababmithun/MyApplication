<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidlime.loginandregistrationandprofilefirebase.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="230dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:src="@drawable/poslogo"
                />

            <TextView
                android:scaleX="1.3"
                android:textSize="50dp"
                android:textColor="30dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="User LogIn"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textAppearance="?android:textAppearanceLarge"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:textColorHint="@android:color/white"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/edittextEmail"
                android:background="@drawable/editbackground"
                android:padding="10dp"
                android:gravity="center"
                android:hint="Email Address:"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:background="@drawable/editbackground"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColorHint="@android:color/white"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/edittextPassword"
                android:hint="Enter PassWord:"
                />

            <Button
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:text="Login"
                android:id="@+id/buttonlogin"
                android:textColor="@android:color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="@drawable/editbackground"
                />

            <TextView
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Forget Password?"
                android:textAppearance="?android:textAppearanceSmall"
                android:id="@+id/forgetpassword_xml"
                />

            <TextView
                android:layout_marginTop="60dp"
                android:scaleY="1.5"

                android:scaleX="1.2"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Not Have an account? Sign Up here."
                android:gravity="center"
                android:id="@+id/signupbtn"
                android:textAppearance="?android:textAppearanceSmall"
                />
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
